@model IQueryable<Blog.Models.BlogItem>
           @*
           For more information on enabling MVC for empty projects, visit https: //go.microsoft.com/fwlink/?LinkID =397860
           *@
           @{
           }

    <h1>Lista wpisów</h1>

    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th>Title</th>
                <th>Content</th>
                <th>Adding date</th>
                <th>Operacje</th>
            </tr>
        </thead>
        @foreach (var item in @Model)
        {
        <tr>
            <td>@item.Title</td>
            <td>
                @if(@item.Content.Length < 50)
                {
                @item.Content;
                }
                else
                {
                @item.Content.Substring(20);
                }
            </td>
            <td>@item.CreationTimestamp</td>
            <td class="d-flex">
                <a asp-controller="Blog"
                   asp-action="Edit"
                   asp-route-id="@item.Id"
                   class="btn btn-primary m-1">
                    Edytuj
                </a>
                <a asp-controller="Blog"
                   asp-action="Delete"
                   asp-route-id="@item.Id"
                   class="btn btn-danger m-1">Usuń</a>
                <a asp-controller="Blog"
                   asp-action="Details"
                   asp-route-id="@item.Id"
                   class="btn btn-secondary m-1">Szczegóły</a>
            </td>
        </tr>
        }
    </table>