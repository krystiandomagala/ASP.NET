@{
}

<div class="container-fluid m-3">
    <h2>Dodaj wpis na bloga</h2>
    <form method="post" asp-action="Add" asp-controller="Blog">
        <div class="mb-3">
            <input class="form-control" asp-for="Title" />
        </div>

        <div class="mb-3">
            <textarea class="form-control" asp-for="Content"></textarea>
        </div>

        <div class="mb-3">
            <input class="form-control" asp-for="CreationTimestamp" />
        </div>

        <div class="mb-3">
            <button class="btn btn-primary" type="submit">Zapisz</button>
            <button class="btn btn-danger" type="reset">Wyczyść</button>
        </div>
    </form>
</div>